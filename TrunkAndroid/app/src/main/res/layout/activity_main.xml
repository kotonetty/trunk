<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kikuchikotone.trunkandroid.MainActivity">
    <LinearLayout
        android:id="@+id/camera_and_gallary"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_camera"
            android:background="@drawable/button_state"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:text="Camera" />
        <Button
            android:id="@+id/button_garally"
            android:background="@drawable/button_state"
            android:layout_below="@+id/button_camera"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:text="Gallary" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/share_and_info"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camera_and_gallary">
        <Button
            android:id="@+id/button_info"
            android:background="@drawable/button_state"
            android:layout_below="@+id/button_garally"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginRight="4dp"
            android:text="info" />
        <Button
            android:id="@+id/button_share"
            android:background="@drawable/button_state"
            android:layout_below="@+id/button_info"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="4dp"
            android:text="Share" />
    </LinearLayout>



</RelativeLayout>
